{
  "name": "graphql-dataloader-boilerplate",
  "description": "GraphQL DataLoader boilerplate",
  "version": "0.0.1",
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bcrypt-as-promised": "^1.1.0",
    "dataloader": "^1.2.0",
    "date-fns": "^1.28.0",
    "dotenv-safe": "^3.0.0",
    "es6-promise": "^4.0.5",
    "graphql": "^0.7.0",
    "graphql-relay": "^0.4.3",
    "graphql-tools": "^0.10.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.1.9",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.2.0",
    "koa-compose": "^3.1.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.6.0",
    "koa-logger": "^2.0.0",
    "koa-router": "^7.0.1",
    "mongoose": "^4.6.7"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^7.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "eslint": "^3.10.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.35.0",
    "jest": "test",
    "jest-cli": "test",
    "nodemon": "^1.10.2",
    "reify": "^0.4.0",
    "repl": "^0.1.3",
    "repl-promised": "^0.1.0",
    "repl.history": "^0.1.3",
    "rimraf": "^2.5.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    }
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sibelius/graphql-dataloader-boilerplate"
  },
  "scripts": {
    "build": "npm run clear && babel src --ignore *.spec.js --out-dir dist --copy-files",
    "clear": "rimraf ./dist",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src/**",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
    "start": "node dist/index.js",
    "test": "jest --coverage --forceExit --runInBand",
    "test:watch": "jest --watch --coverage",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "watch": "nodemon src/index.js --exec babel-node"
  }
}
